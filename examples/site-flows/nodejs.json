{
  "settings": {
    "headed": true,
    "deterministic": true,
    "captureScreenshots": true
  },
  "actions": [
    {
      "type": "navigate",
      "url": "https://nodejs.org/en",
      "waitUntil": "domcontentloaded"
    },
    {
      "type": "click",
      "target": {
        "kind": "stableRef",
        "value": "href:https://nodejs.org/en/download"
      }
    },
    {
      "type": "waitFor",
      "condition": {
        "kind": "selector",
        "selector": "main",
        "state": "visible"
      }
    },
    {
      "type": "assert",
      "condition": {
        "kind": "url_contains",
        "value": "/download"
      }
    },
    {
      "type": "snapshot"
    }
  ]
}
