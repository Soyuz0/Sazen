{
  "settings": {
    "headed": true,
    "deterministic": true,
    "captureScreenshots": true
  },
  "actions": [
    {
      "type": "navigate",
      "url": "https://books.toscrape.com",
      "waitUntil": "domcontentloaded"
    },
    {
      "type": "click",
      "target": {
        "kind": "roleName",
        "role": "link",
        "name": "Travel"
      }
    },
    {
      "type": "waitFor",
      "condition": {
        "kind": "selector",
        "selector": "h1",
        "state": "visible"
      }
    },
    {
      "type": "assert",
      "condition": {
        "kind": "title_contains",
        "value": "Travel"
      }
    },
    {
      "type": "snapshot"
    }
  ]
}
